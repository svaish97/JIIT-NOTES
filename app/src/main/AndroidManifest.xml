<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vaish.saurabh.jiitnotes">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/notes"
        android:label="JIIT Notes"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.vaish.saurabh.jiitnotes.SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.vaish.saurabh.jiitnotes.MainActivity"
            android:label="JIIT Notes"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.vaish.saurabh.jiitnotes.Main2Activity"
            android:screenOrientation="portrait"
            android:parentActivityName="com.vaish.saurabh.jiitnotes.MainActivity"/>

        <activity android:name="com.vaish.saurabh.jiitnotes.aboutTheDevelopers" />

        <activity
            android:name="com.vaish.saurabh.jiitnotes.authentication"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name="com.vaish.saurabh.jiitnotes.PrivacyPolicy"
            android:parentActivityName="com.vaish.saurabh.jiitnotes.MainActivity"/>

        <activity android:name="com.vaish.saurabh.jiitnotes.ViewPDF"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>